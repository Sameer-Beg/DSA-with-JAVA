import java.util.Scanner;

public class v3_Conditionals_staments {
    public static void main(String[] args) {
        // If else . question check age is greator  then or less then 18
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter your age ...");
        int age = sc.nextInt();
        if(age > 18){
            System.out.println("you can drive a car ");
        }
        else {
            System.out.println("u can not a drive");
        }

        // question check wheater a number is even or add
        System.out.println("Enter the number ..");
        int num = sc.nextInt();
        if(num % 2 == 0){
            System.out.println("even number");
        }
        else {
            System.out.println("odd number ");
        }
        
        // question write program to check a=b print equal and a>b greator and a<b lessor
        System.out.println("Enter the number one..");
        int n1 = sc.nextInt();
        System.out.println("Enter the number two..");
        int n2 = sc.nextInt();
        if (n1 == n2){
            System.out.println("Equal");
        }
        else if (n1 > n2){
            System.out.println("n1 is greator");
        } else if (n1 < n2) {
            System.out.println("n1 is lessor");
        }

        // switch
        System.out.println("Enter the button case");
        int button = sc.nextInt();
        switch (button){
            case 1 :
                System.out.println("salam");
                break;
            case 2 :
                System.out.println("namaste");
                break;
            case 3 :
                System.out.println("Jai hind");
                break;
            default:
                System.out.println("invalid button");
        }

        // HOMEWORK  QUESTIONS
        // question number 1
        System.out.println("Enter number one.");
        int num1 = sc.nextInt();
        System.out.println("Enter number two.");
        int num2 = sc.nextInt();

        System.out.println("Enter the choice ");
        int choice = sc.nextInt();

        switch (choice){
            case 1 :
                System.out.println(num1 + num2);
                break;
            case 2 :
                System.out.println(num1 * num2);
                break;
            case 3 :
                System.out.println(num1 % num2);
                break;
            case 4 :
                System.out.println(num1 - num2);
                break;
            default:
                System.out.println("invalid calculations");
        }

        //Ask the user to enter the number of the month & print the name of the month. For eg - For ‘1’ print ‘January’, ‘2’ print ‘February’ & so on.
        System.out.println("choose month");
        int month = sc.nextInt();
        switch (month){
            case 1 :
                System.out.println("jan");
                break;
            case 2 :
                System.out.println("feb");
                break;
            case 3:
                System.out.println("march");
                break;
            case 4 :
                System.out.println("aprl");
                break;
            case 5 :
                System.out.println("may");
                break;
            default:
                System.out.println("invalid month");
        }
    }
}
